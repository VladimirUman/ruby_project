<p id="notice"><%= notice %></p>

<h1><%= t('.title_html') %></h1>


<ul class="products clearfix">
  <% cache @products do %>
    <% @products.each do |product| %>
      <% cache product do %>
      	<li class="product-wrapper">
          <div class="product">
      		<%= link_to store_path(product) do %>
            <div class="product-main">
              <div class="product-photo">
              	<%= image_tag(product.image.url) if product.image_stored? %>
              </div>
              <div class="product-text">
              	<h3 class="product-name"><%= product.title %></h3>
                <div class="description">
                <%= sanitize(product.description) %>
                </div>
              </div>
            </div>
          <% end %>
            <div class="product-details">
              <div class="product-price">
                <%= number_to_currency(product.price) %>
              </div>
              <span class="button to-cart">
              	<%= button_to t('.add_html'), line_items_path(product_id: product), remote: true, class: "btn btn-info" %>
              </span>
            </div>
          </div>
        </li>
      <% end %>
    <% end %>
  <% end %>
</ul>

<p><%= paginate @products %></p>
