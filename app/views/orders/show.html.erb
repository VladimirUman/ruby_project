<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @order.name %>
</p>

<p>
  <strong>Address:</strong>
  <%= @order.address %>
</p>

<p>
  <strong>Email:</strong>
  <%= @order.email %>
</p>

<p>
  <strong>pay type:</strong>
  <%= @order.pay_type %>
</p>

<p>
  <table class="table">
    <% @order_items.each do |item| %>
      <tr>
        <td><%= item.quantity %></td>
        <td><%= item.product.title %></td>
        <td><%= number_to_currency(item.product.price) %></td>
      </tr>
    <% end %>
  </table>     
</p>

<%= link_to 'Edit', edit_order_path(@order) %> |
