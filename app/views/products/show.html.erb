<p id="notice"><%= notice %></p>

<div class="images">
  <% unless @images.empty? %>
    <% @images.each do |image| %>
      <div class="image">
        <%= link_to image.image.url, data: { lightbox: "product_images" } do %>
          <%= image_tag(image.image.url, height: 200) %>
        <% end %>
      </div>
    <% end %>
  <% end %>
</div>

<p>
  <strong>Title:</strong>
  <%= @product.title %>
</p>

<p>
  <strong>Category:</strong>
  <%= Category.find(@product.category_id).name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @product.description %>
</p>

<p>
  <strong>Price:</strong>
  <%= @product.price %>
</p>

<%= link_to 'Edit', edit_product_path(@product) %> |
<%= link_to 'Back', products_path %>
