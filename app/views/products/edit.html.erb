<p id="notice"><%= notice %></p>

<h1>Editing Product</h1>

<div class="images" style="margin: 20px 0 20px 0">
  <% unless @images.empty? %>
    <% @images.each do |image| %>
      <div style="position: relative; display: inline-block; margin-left: 10px">
        <%= image_tag(image.image.url, height: 200) %>
        <%= link_to image, method: :delete, data: { confirm: 'Delete image?' }, title: "Delete image" do %>
          <span class="glyphicon glyphicon-remove-circle" aria-hidden="true" style="font-size: 24px; position: absolute; top: 0px; right: 0px"></span>
        <% end %>
      </div>
    <% end %>
  <% end %>
</div>

<%= render 'form', product: @product %>

<%= link_to 'Show', @product %> |
<%= link_to 'Back', products_path %>
