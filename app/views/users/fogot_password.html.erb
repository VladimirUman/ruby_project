<h1>Change password</h1>

<% if flash[:alert] %>
  <p id="notice"><%= flash[:alert] %></p>
<% end %>

<%= form_tag fogot_password_url, class: "form-horizontal" do %>
  
  <fieldset>
  <legend>Enter your e-mail</legend>

  <div class="form-group">
    <%= label_tag :email, 'Email:', class: "col-sm-1 control-label" %>
    <div class="col-sm-2">
    <%= email_field_tag :email, params[:email], class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-1 col-sm-10">
    <%= submit_tag "Send letter with new password", class: "btn btn-info" %>
    </div>
  </div>

  </fieldset>
<% end %>

<%= link_to 'Back', login_path %>
