<!DOCTYPE html>
<html>
  <head>
    <title>Online Store</title>
    <%= csrf_meta_tags %>

    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all',
    'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="<%= controller.controller_name %>">


<nav class="navbar navbar-default">
  <div class="container-fluid">
    <div class="navbar-header">
      <%= link_to(image_tag('logo.jpg', alt: 'The Bookshelf', height: '50', width: '60'), store_index_path) %>
    </div>

    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav">
          <li><%= link_to t('.catalog'), store_index_path   %></li>
          <li><%= link_to t('.news'), news_path   %></li>
          <li><%= link_to t('.about'), about_path   %></li>
          <li><%= link_to t('.contact'), contacts_path   %></li>
        <% if session[:user_id] %>
          <li><%= link_to 'Orders',   orders_path   %></li>
          <li><%= link_to 'Products', products_path %></li>
          <li><%= link_to 'Categories', categories_path %></li>
          <li><%= link_to 'Add news', news_items_path   %></li>
          <li><%= link_to 'Users',    users_path    %></li>
        <% end %>
      </ul>

      <ul class="nav navbar-nav navbar-right">
        <% if session[:user_id] %>
          <li><%= link_to 'Logout', logout_path, method: :delete %></li>
        <% end %>
        <li>
          <a>
          <%= form_tag store_index_path, class: 'locale' do %>
            <%= select_tag('set_locale',
              options_for_select(LANGUAGES, I18n.locale.to_s),
              onchange: 'this.form.submit()') %>
            <%= submit_tag 'submit' %>
            <%= javascript_tag "$('.locale input').hide()" %>
          <% end %>
        </a>
        </li>
      </ul>
    </div>
  </div>
</nav>

    <div id="banner">

      <span class="title"><%= @page_title %></span>
    </div>

    <div id="columns">

        <% if @cart %>
          <%= hidden_div_if(@cart.line_items.empty?, id: 'cart') do %>
            <%= render @cart %>
          <% end %>
        <% end %>

      <div id="main">
        <%= yield %>
      </div>
    </div>
  </body>
</html>
