<% if line_item == @current_item %>
<tr id="current_item">
<% else %>
<tr>
<% end %>
  <td><%= button_to ('+'), line_items_path(product_id: line_item.product.id), remote: true, class: "btn btn-info" %></td>
  <td class="item_count"><%= line_item.quantity %></td>
  <td><%= button_to ('-'), line_item, method: :delete, remote: true, class: "btn btn-info" %></td>
  <td><%= line_item.product.title %></td>
  <td class="item_price"><%= number_to_currency(line_item.total_price) %></td>
</tr>
