<h2><%= t('.title') %></h2>
<table class="table table-hover">
  <%= render(cart.line_items) %>

  <tr class="total_line">
    <td colspan="2"><%= t('.total') %></td>
    <td class="total_cell"><%= number_to_currency(cart.total_price) %></td>
  </tr>

</table>
<div class="cart-buttons">
  <div>
    <%= button_to t('.checkout'), new_order_path, method: :get, class: "btn btn-success btn-sm" %>
  </div>
  <div>
    <%= button_to t('.empty'), cart, method: :delete, data: { confirm: t('.sure') }, class: "btn btn-warning btn-sm" %>
  </div>
</div>
